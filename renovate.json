{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)",
    ":automergeMinor",
    ":automergeBranch",
    ":automergeLinters",
    ":automergeTesters",
    ":automergeTypes"
  ],
  "packageRules": [
    {
      "groupName": "pino",
      "matchPackageNames": ["pino", "pino-http", "pino-pretty", "nestjs-pino"]
    },
    {
      "groupName": "typeorm",
      "matchPackageNames": [
        "typeorm",
        "@nestjs/typeorm",
        "nestjs-typeorm-paginate"
      ]
    },
    {
      "groupName": "sentry",
      "matchPackageNames": ["@sentry/node", "nest-raven"]
    },
    {
      "groupName": "pg-boss",
      "matchPackageNames": ["pg-boss", "@apricote/nest-pg-boss"]
    }
  ]
}
